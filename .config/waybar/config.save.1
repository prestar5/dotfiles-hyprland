{
  "layer": "top",
    "modules-left": ["custom/arch", "clock", "tray"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["group/systemstats", "backlight", "pulseaudio", "network", "battery", "custom/notification", "custom/powermenu"],
    "custom/arch": {
      "format": "",
      "tooltip-format": "i use arch btw",
      "on-click": "exec .config/rofi/launchers/type-6/launcher.sh"
    },
    "hyprland/workspaces": {
      "format": "{name}",
      "format": "{icon}",
      "tooltip": false,
      "format-icons": {
	"1": "",
	"2": "",
	"3": "",
	"4": "",
	"5": "󰆈",
	"6": "",
	"7": "󰙯",
      },
    },
    "clock": {
      "format": "<span color='#b4befe'> </span> {:%H:%M}",
      "tooltip-format": "{:%m-%d-%Y}",
    },
    "backlight": {
      "device": "intel_backlight",
      "tooltip": false,
      "format": "<span color='#b4befe'>{icon}</span> {percent}%",
      "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "pulseaudio": {
      "format": "<span color='#b4befe'>{icon}</span> {volume}%",
      "format-muted": "<span color='#f38ba8'>󰝟</span> Muted",
      "tooltip": false,
      "format-icons": {
        "headphone": "",
        "default": ["󰕿", "󰖀", "󰕾"]
      },
      "scroll-step": 1,
    },
    "network": {
      "interface": "wlp5s0",
      "format": "{ifname}",
      "format-wifi": "<span color='#b4befe'> </span>",
      "format-ethernet": "<span color='#b4befe'></span>",
      "format-disconnected": "<span color='#b4befe'>󰖪 </span>Disconnected",
      "tooltip-format": "{ifname} via {gwaddr} 󰊗",
      "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
      "tooltip-format-ethernet": "{ifname} ",
      "tooltip-format-disconnected": "Disconnected",
    },
    "battery": {
      "format": "<span color='#b4befe'>{icon}</span> {capacity}%",
      "format-icons": ["<span color='#f38ba8'>󱊡</span>", "󱊢", "󱊣"],
      "format-charging": "<span color='#b4befe'>󰂄</span> {capacity}%",
      "tooltip-format": "Usage time: {time}",
      "tooltip-format-charging": "Time until full: {time}",
    },
    "tray": {
      "icon-size": 14,
      "spacing": 5
    },
    "cpu": {
      "format": "<span color='#b4befe'> </span> {usage}%"
    },
    "memory": {
      "format": "<span color='#b4befe'> </span> {percentage}%"
    },
    "group/systemstats": {
       "orientation": "horizontal",
       "modules": [
		"cpu",
		"memory",
	]
     },
"custom/pacman": {
    "format": "<span color='#b4befe'>󰏖 </span>{}",
    "tooltip": false,
    "interval": 3600,                     // every hour
    "exec": "checkupdates | wc -l",       // # of updates
    "exec-if": "exit 0",                  // always run; consider advanced run conditions
    "on-click": "kitty -e 'paru'; pkill -SIGRTMIN+8 waybar", // update system
    "signal": 8
},

"custom/paru": {
       "format": "<span color='#b4befe'>󰏓 </span>{}",
       "tooltip": false,
       "interval": 3600,                     // every hour
       "exec": "paru -Qu | wc -l",       // # of updates
       "exec-if": "exit 0",
       "on-click": "kitty -e 'paru'; pkill waybar", // update system
       "signal": 8
},
    "group/archupd": {
       "orientation": "horizontal",
       "modules": [
                "custom/pacman",
                "custom/paru",
        ]
     },
"custom/powermenu": {
      "format": "<span color='#f38ba8'>⏻</span>",
      "on-click": "exec .config/rofi/powermenu/type-5/powermenu.sh"
    },

"custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup>x</sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
}
